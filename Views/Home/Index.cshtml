@{
    ViewData["Title"] = "Home Page";
    
}
@model AfCentral_MVC.Models.Facilitator;

<h1>Facilitators Details</h1>
@using (@Html.BeginForm("form1", "Home", FormMethod.Post, new{@class="insertForm"}))
{
    @Html.TextBoxFor(m=>m.Name,  new {@placeholder= "Name", @class ="textInput"})<br/>
    <span class="errorMessage">@Html.ValidationMessageFor(m=>m.Name)</span>
    

    @Html.TextBoxFor(m=>m.Surname, new {@placeholder="Surname", @class = "textInput"})<br/>
    <span class="errorMessage">@Html.ValidationMessageFor(m=>m.Surname)</span>
    

    @Html.TextBoxFor(m=>m.Email, new{@placeholder="Email",@class="textInput" })<br/>
    <span class="errorMessage">@Html.ValidationMessageFor(m=>m.Email)</span>
    

    @Html.TextBoxFor(m=>m.Contact, new {@placeholder="Contact Number", @class="textInput"})<br/>
    <span class="errorMessage">@Html.ValidationMessageFor(m=>m.Contact)</span><br/> 

    <input class="submitBtn" type="submit" value="submit"/>

}